# Database
DATABASE_URL="postgresql://username:password@localhost:5432/lms_platform"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-long"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="lms-platform-bucket"

# Payment Providers
PAYTR_MERCHANT_ID="your-paytr-merchant-id"
PAYTR_MERCHANT_KEY="your-paytr-merchant-key"
PAYTR_MERCHANT_SALT="your-paytr-merchant-salt"

IYZICO_API_KEY="your-iyzico-api-key"
IYZICO_SECRET_KEY="your-iyzico-secret-key"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# App
NODE_ENV="development"
PORT=3001
WEB_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Security
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Device Management
MAX_DEVICES_PER_USER=3
DEVICE_APPROVAL_EXPIRES_IN=900
